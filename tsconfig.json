{
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "module": "es2020",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "target": "es6",
        "paths": {
            "@config/*": ["config/*"],
            "@utils/*": ["app/utils/*"],
            "@assets/*": ["app/assets/*"]
        }
    },
    "include": [
        "app/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}